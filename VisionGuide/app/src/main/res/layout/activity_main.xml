<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Top Text Label -->
    <LinearLayout
        android:id="@+id/topLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/speaker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/labelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VisionGuide"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/bottomTabs"
        android:layout_above="@id/topLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop" />

    <!-- WaveformView -->
<!--    <com.example.visionguide.WaveformView-->
<!--        android:id="@+id/waveformView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_below="@id/topLabel"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="32dp" />-->

    <!-- Bottom Tab Bar -->
    <LinearLayout
        android:id="@+id/bottomTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/audioTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:drawableStart="@drawable/ic_waveform"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:drawableStart="@android:drawable/ic_menu_camera"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"/>


    </LinearLayout>
</RelativeLayout>
